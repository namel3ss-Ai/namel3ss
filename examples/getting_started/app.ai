spec is "1.0"

tool "format greeting":
  implemented using python

  input:
    name is text

  output:
    message is text

tool "node greeting":
  implemented using node

  input:
    name is text

  output:
    message is text

record "Note":
  field "title" is text must be present
  field "body" is text

ai "assistant":
  provider is "mock"
  model is "mock-model"
  system_prompt is "You are a concise assistant."

flow "ai_demo":
  ask ai "assistant" with input: "Say hello." as reply
  return reply

flow "python_demo":
  let result is format greeting:
    name is "Ada"
  return result

flow "node_demo":
  let result is node greeting:
    name is "Ada"
  return result

page "home":
  title is "First use"
  text is "Run actions and view notes."
  section "Notes":
    card "Add note":
      form is "Note"
    card "Saved notes":
      table is "Note"
  card "Actions":
    button "AI demo":
      calls flow "ai_demo"
    button "Python demo":
      calls flow "python_demo"
    button "Node demo":
      calls flow "node_demo"

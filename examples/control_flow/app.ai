spec is "1.0"

flow "demo":
  let total is 2

  if total is greater than 1:
    let label is "big"
  else:
    let label is "small"

  repeat up to 0 times:
    set state.repeat_hit is true

  match total:
    with:
      when 1:
        set state.match is "one"
      when 2:
        set state.match is "two"
      otherwise:
        set state.match is "other"

  return label

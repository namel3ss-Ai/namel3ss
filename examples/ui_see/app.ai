spec is "1.0"

record "Profile":
  field "name" is text must be present
  field "role" is text

page "home":
  title is "Welcome"
  text is "Manage your profile"
  button "Admin":
    calls flow "admin_only"

page "settings":
  form is "Profile"
  table is "Profile"

flow "admin_only": requires identity.role is "admin"
  return "ok"

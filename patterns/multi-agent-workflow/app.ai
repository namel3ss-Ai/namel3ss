spec is "1.0"

identity "User":
  field "email" is text must be present
  field "role" is text must be present

use "agents" as agent_mod

page "home": requires identity.role is "operator"
  title is "Multi-agent workflow"
  text is "Run planner, critic, and researcher steps independently."
  section "Agent runs":
    row:
      column:
        button "Plan":
          calls flow "agent_mod.plan_step"
      column:
        button "Critic":
          calls flow "agent_mod.critic_step"
      column:
        button "Research":
          calls flow "agent_mod.research_step"

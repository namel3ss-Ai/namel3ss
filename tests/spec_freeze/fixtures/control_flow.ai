spec is "1.0"

flow "control":
  let total is 2
  if total is greater than 1:
    set state.label is "big"
  else:
    set state.label is "small"
  repeat up to 2 times:
    let x is 1
  for each item in state.items:
    set state.last is item
  match state.last:
    with:
      when 1:
        set state.status is "one"
      when 2:
        set state.status is "two"
      otherwise:
        set state.status is "other"
  return state.status

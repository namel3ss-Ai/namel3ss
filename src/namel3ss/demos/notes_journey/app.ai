spec is "1.0"

# demo: notes_journey@0.1.0
# Read-only demo showing a short flow and story.

record "Note":
  field "summary" is text must be present
  field "details" is text

flow "seed_note" requires true
  create "Note"
    summary is "example note"
    details is "notes_journey demo"

page "home":
  purpose is "Show a compact notes journey demo."
  title is "{{PROJECT_NAME}}"
  text is "read-only demo for namel3ss."
  image is "welcome":
    role is "iconic"
  compose highlights:
    number:
      count of "Note" as "notes"
    view of "Note"
  story "Journey":
    step "Create":
      text is "Run the flow to add a note."
      icon is add
      next is "Review"
    step "Review":
      text is "Check the view for your notes."
      image is "welcome":
        role is "illustration"
  card "flow":
    text is "call the seed flow to create a note."
    button "add example note":
      calls flow "seed_note"

spec is "1.0"

record "Note":
  field "summary" is text must be present
  field "details" is text

flow "seed_note"
  create "Note"
    summary is "hello"
    details is "this note is created by a flow"

page "home":
  title is "{{PROJECT_NAME}}"
  text is "starter app for namel3ss."
  section "notes":
    card "add note":
      form is "Note"
    card "saved notes":
      table is "Note"
  card "flow":
    text is "use the button to add a deterministic note."
    button "add sample note":
      calls flow "seed_note"


spec is "1.0"

tool "write text file":
  implemented using python

  input:
    path is text
    text is text

  output:
    ok is boolean
    path is text

flow "demo":
  try:
    let result is write text file:
      path is "blocked.txt"
      text is "nope"
    return "unexpected"
  with catch err:
    return "blocked"

{
  "openapi": "3.1.0",
  "info": {
    "title": "Namel3ss Headless API",
    "version": "v1"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:8787"
    }
  ],
  "paths": {
    "/api/v1/ui": {
      "get": {
        "summary": "Fetch headless UI manifest envelope",
        "parameters": [
          {
            "name": "include_state",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "include_actions",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Headless manifest payload"
          },
          "401": {
            "description": "Missing or invalid token"
          },
          "403": {
            "description": "Blocked CORS origin"
          },
          "404": {
            "description": "Unsupported API version"
          }
        },
        "security": [
          {
            "ApiToken": []
          }
        ]
      }
    },
    "/api/v1/actions/{action_id}": {
      "post": {
        "summary": "Invoke a UI action",
        "parameters": [
          {
            "name": "action_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "args": {
                    "type": "object"
                  },
                  "payload": {
                    "type": "object"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Action completed"
          },
          "400": {
            "description": "Action failed"
          },
          "401": {
            "description": "Missing or invalid token"
          },
          "403": {
            "description": "Blocked CORS origin"
          }
        },
        "security": [
          {
            "ApiToken": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiToken": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Token"
      },
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
